{
    "hostRequirements": {
     "cpus": 24
    },
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "ghcr.io/devcontainers/features/go:1": {},
      "ghcr.io/devcontainers/features/hugo:1.1.3": {
        "version": "0.147.6",
        "extended": "true"
      },
      "ghcr.io/devcontainers/features/github-cli:1": {},
      "ghcr.io/devcontainers/features/node:1": {
        "version": "lts"
      }
    },
    "postAttachCommand": "./scripts/welcome.sh",
    "forwardPorts": [1313],
    
    "customizations": {
      "vscode": {
        // Inbuilt extensions, these are used for the github/github devcontainer too
        "extensions": [
          "GitHub.codespaces",
          "GitHub.copilot@prerelease",
          "GitHub.copilot-chat@prerelease",
          "mutantdino.resourcemonitor",
          "jasonnutter.vscode-codeowners"
        ],
        // Instructions for hackspaces
        "settings": {
          "github.copilotChat.advanced.customInstructionsFile": ".github/copilot-instructions.md",
          "github.copilot.chat.languageContext.typescript.enabled": false,
          "github.copilot.chat.languageContext.markdown.enabled": true,
          "github.copilot.chat.languageContext.yaml.enabled": true
        }
      }
    }
  }
