{
  "servers": {
    "github-mcp-remote": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "memory": { 
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "/tmp/memory.json"
      }
    },
    "context7": { 
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "sequential-thinking": { 
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  }
}
